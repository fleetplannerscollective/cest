{
    "name": "cest",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "npx ttsc --project src",
        "test": "cest src/tests",
        "watch": "npx ttsc --project src --watch",
        "clean": "node ./scripts/clean --path cest/dist"
    },
    "bin": {
        "cest": "./dist/cli/main.js"
    },
    "dependencies": {
        "chalk": "^5.0.1",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/source-map-support": "^0.5.4",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
        "ttypescript": "^1.5.13",
        "typescript": "^4.7.4"
    },
    "description": "Small and light test runner for typescript",
    "main": "cest.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/fleetplannerscollective/cest"
    },
    "keywords": [
        "test",
        "runner",
        "typescript"
    ],
    "author": "Tim Roediger",
    "license": "MIT"
}